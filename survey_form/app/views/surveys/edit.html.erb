<h1>Editing Survey</h1>


<form action="/surveys/create" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
	<label>Name:</label>
	<input type="text" name="survey[name]" placeholder="Name">
	<label>Location:</label>
	<select name="survey[location]">
		<option value="dallas">Dallas</option>
		<option value="san_jose">San Jose</option>
		<option value="la">L.A.</option>
	</select>
	<label>Language:</label>
	<select name="survey[language]">
		<option value="python">Python</option>
		<option value="c++">C++</option>
		<option value="klingon">Klingon</option>
	</select>
	<textarea name="survey[comment]"></textarea>


 	<input type="submit" value="Submit">
</form>

<%= link_to 'Show', @survey %> |
<%= link_to 'Back', surveys_path %>
